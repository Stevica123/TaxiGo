<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/taxigo_logo"
                android:contentDescription="TaxiGo Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TaxiGo"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Картичка за избор локација -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Избери локација"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:paddingBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinnerLocations"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Картичка за избор тип на возило -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Избери тип на возило"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:paddingBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/rgVehicleType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rbClassic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Класично (1-3 лица)"
                            android:textSize="15sp"
                            android:padding="8dp"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rbLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Поголемо (4+ лица)"
                            android:textSize="15sp"
                            android:padding="8dp" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Копче за нарачка -->
            <Button
                android:id="@+id/btnOrderTaxi"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Нарачај"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5722"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"
                android:background="@drawable/btn_rounded_corners"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_nav_background"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:itemTextColor="@color/nav_item_color_selector"
        app:itemIconTint="@color/nav_item_color_selector"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled" />

</LinearLayout>
