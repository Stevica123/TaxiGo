<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="?android:attr/windowBackground">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="6dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E0E0E0"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="8dp"
            android:contentDescription="@string/profile_picture_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_anonymous" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_info_card"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="32dp"
        android:padding="20dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/profileNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name_placeholder"
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profileEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_email_placeholder"
            android:textColor="#212121"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/profileIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_id_placeholder"
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profileOrderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_order_count"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_gravity="center" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/logout_button_text"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="24dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/red_600" />

</LinearLayout>
